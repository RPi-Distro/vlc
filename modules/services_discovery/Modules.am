libpulselist_plugin_la_LIBADD = $(AM_LIBADD) $(PULSE_LIBS)
libpulselist_plugin_la_DEPENDENCIES =
if HAVE_PULSE
libvlc_LTLIBRARIES += libpulselist_plugin.la
endif

libudev_plugin_la_SOURCES = udev.c
